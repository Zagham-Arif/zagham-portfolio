{
  "name": "zagham-portfolio",
  "version": "0.1.0",
  "private": true,
  "description": "Modern portfolio website built with Next.js 14, TypeScript, Tailwind CSS, and next-intl for internationalization",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
