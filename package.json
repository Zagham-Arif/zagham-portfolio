    "clsx": "^2.1.1",
    "framer-motion": "^12.23.6",
    "next": "14.2.30",
    "next-intl": "^4.3.4",
    "next-themes": "^0.4.6",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.60.0",
